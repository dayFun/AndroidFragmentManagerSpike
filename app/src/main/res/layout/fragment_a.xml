<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/text_view_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment A" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_a_showB_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Fragment B" />

        <Button
            android:id="@+id/fragment_a_hideB_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide Fragment B" />

        <Button
            android:id="@+id/fragment_a_detachB_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detach Fragment B" />

    </LinearLayout>
</LinearLayout>